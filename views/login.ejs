<body class="login-body">

    <div class="form-container">
        <h2>Login</h2>
        <form action="/login" method="post">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="username" placeholder="Enter your name" required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" placeholder="Password" required>
            </div>
            <button type="submit" class="submit-btn sub">Login</button>
        </form>
        <p>Don't have an account? <a class="link" href="/signup">SignUp</a></p>
        <div class="errorCont">
            <p><% if (typeof error !== 'undefined' && error.length > 0) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %></p>
        </div>      
    </div>
    
</body>

</html>